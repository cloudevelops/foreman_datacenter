<div id="racks-container">
  <div class="clearfix">
    <div class="form-group">
      <label class="col-md-2 control-label required"><%= _("Rack") %></label>
      <div class="col-md-4">
        <%= racks_list_for_site site %>
      </div>
      <span class="help-block help-inline"><%= _("First, you need to select a rack") %></span>
    </div>
  </div>
</div>

<div id="devices-container" data-url="<%= options[:url] %>"
     data-target="<%= options[:target] %>" data-fragment="<%= options[:fragment] %>">
  <div class="clearfix">
    <div class="form-group">
      <label class="col-md-2 control-label required"><%= _("Device") %></label>
      <div class="col-md-4">
        <%= devices_list_for_rack %>
      </div>
      <span class="help-block help-inline"><%= _("Then choose a device") %></span>
    </div>
  </div>
</div>
