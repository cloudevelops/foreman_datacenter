<% stylesheet 'foreman_datacenter/device_roles' %>
<% stylesheet 'foreman_datacenter/datacenter' %>

<% title h("Rack #{@rack.name}") %>

<%= breadcrumbs(items: [{caption: _('Racks'), url: '/datacenter/racks'}, {caption: _(@rack.to_label)}]) %>

<% title_actions display_link_if_authorized(
                   _('Edit'),
                   hash_for_edit_rack_path(:id => @rack),
                   :class => 'btn btn-warning'
                 ),
                 display_delete_if_authorized(
                   hash_for_rack_path(:id => @rack),
                   :data => { :confirm => 'Are you sure?' },
                   :action => :destroy,
                   :class => 'btn btn-danger'
                 )
                 help_path %>

<div class="row">
  <div class="col-md-6">
    <!-- Rack details -->
    <div class="panel panel-default">
      <div class="panel-heading">
        <strong>Rack</strong>
      </div>
      <table class="<%= table_css_classes 'table-fixed nonmarginbottom' %>">
        <tbody>
        <tr>
          <td>Site</td>
          <td><%= link_to @rack.site.name, site_path(@rack.site) %></td>
        </tr>
        <tr>
          <td>Group</td>
          <td>
            <% if @rack.rack_group %>
                <%= link_to @rack.rack_group.name, rack_group_path(@rack.rack_group) %>
            <% else %>
                —
            <% end %>
          </td>
        </tr>
        <tr>
          <td>Facility ID</td>
          <td><%= h(@rack.facility_id || '—') %></td>
        </tr>
        <tr>
          <td>Height</td>
          <td><%= @rack.height %>U</td>
        </tr>
        <tr>
          <td>Devices</td>
          <td><%= @rack.devices.length %></td>
        </tr>
        <tr>
          <td>Created</td>
          <td><%= @rack.created_at.to_s(:long) %></td>
        </tr>
        <tr>
          <td>Last Updated</td>
          <td><%= @rack.updated_at.to_s(:long) %></td>
        </tr>
        </tbody>
      </table>
    </div>

    <!-- Comments -->
    <div class="panel panel-default">
      <div class="panel-heading">
        <strong>Comments</strong>
      </div>
      <div class="panel-body">
        <% if @rack.comments == "" %>
          No comments yet...
        <% else %>
          <%= simple_format @rack.comments %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="col-md-6">
    <!-- Devices -->
    <%= render "device_position", rack: @rack %>

    <!-- Unpositioned Devices -->
    <%= render "unpositioned_devices", rack: @rack if @rack.unpositioned_devices.count != 0 %>
    <div><h6 class="text-right">* side is not defined</h6></div>
    <div><h6 class="text-right">** size is not defined</h6></div>
  </div>

</div>
