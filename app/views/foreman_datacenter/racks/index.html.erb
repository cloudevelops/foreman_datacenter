<% javascript 'foreman_datacenter/racks' %>

<% title _("Racks") %>
<% title_actions new_link(_("Create Rack")), help_button %>

<table class="<%= table_css_classes 'table-fixed' %>">

  <thead>
    <tr>
      <th><%= sort :name, :as => s_("Rack|Name") %></th>
      <th><%= _("Site") %></th>
      <th><%= _("Group") %></th>
      <th><%= _("Facility ID") %></th>
      <th><%= sort :height, :as => s_("Height (U)") %></th>
      <th><%= _("Devices") %></th>
      <th class="col-md-1"><%= _("Action") %></th>
    </tr>
  </thead>

  <tbody>
    <% for rack in @racks %>
      <tr>
        <td class="ellipsis"><%= link_to rack.name, rack_path(rack) %></td>
        <td class="ellipsis"><%= link_to rack.site.name, site_path(rack.site) %></td>
        <td class="ellipsis">
          <% if rack.rack_group %>
            <%= link_to rack.rack_group.name, rack_group_path(rack.rack_group) %>
          <% else %>
            —
          <% end %>
        </td>
        <td class="ellipsis"><%= h(rack.facility_id || '—') %></td>
        <td><%= rack.height %></td>
        <td><%= rack.devices.length %></td>
        <td>
          <%= action_buttons(
                  display_link_if_authorized(
                      _("Edit"),
                      hash_for_edit_rack_path(:id => rack).merge(:auth_object => rack, :authorizer => authorizer)
                  ),
                  display_delete_if_authorized(
                      hash_for_rack_path(:id => rack).merge(:auth_object => rack, :authorizer => authorizer),
                      :data => { :confirm => _("Delete %s?") % rack.name },
                      :action => :destroy
                  )
              ) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate_with_info @racks %>
