<% title _("Move associated objects") %>

<%= breadcrumbs(items: [{caption: _('Rack Groups'), url: rack_groups_path}, {caption: _("Move associated objects")}]) %>

<%= form_tag ('/datacenter/rack_group_update_associated_objects'), class: 'form-horizontal well' do %>
  <div class='clearfix'>
    <%= label_tag 'Rack Group *', nil, class: 'col-md-2 control-label' %>
    <div class='col-md-4'>
      <%= select_tag 'rack_group_id', options_from_collection_for_select(@rack_groups, 'id', 'name', @rack_group.id), class: 'form-control' %>
      <span class="help-block">
        You are going to update <b>rack_group_id</b> for all associated objects:
        <% unless @racks.empty? %>
          </br><b>Racks:</b> <%= @racks.map(&:name).join(', ') %>
        <% end %>
      </span>
    </div>
  </div>
  <div class='clearfix'>
    <div class='form-actions'>
      <%= submit_tag 'Submit', class: 'btn btn-primary remove_form_templates' %>
      <%= link_to(_("Cancel"), rack_group_path(params[:id]), :class => "btn btn-default")%>
    </div>
  </div>
<% end %>
