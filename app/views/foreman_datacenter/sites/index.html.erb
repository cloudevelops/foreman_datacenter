<% title _("Sites") %>
<% title_actions new_link(_("Create Site")), help_button %>

<table class="<%= table_css_classes 'table-two-pane' %>">
  <thead>
    <tr>
      <th><%= sort :name, :as => s_("Site|Name")  %></th>
      <th><%= _("Facility") %></th>
      <th><%= _("ASN") %></th>
      <th><%= _("Racks") %></th>
      <th><%= _("Devices") %></th>
      <th><%= _("Actions") %></th>
    </tr>
  </thead>

  <tbody>
    <%# @sites.each do |site| %>
    <% for site in @sites %>
      <tr>
        <td class='display-two-pane ellipsis'><%= link_to_if_authorized(site.name,
                                        hash_for_edit_site_path(:id => site).merge(:auth_object => site, :authorizer => authorizer)) %></td>
        <td class='ellipsis'><%= h site.facility %></td>
        <td class='ellipsis'><%= h site.asn %></td>
        <td class='ellipsis'><%= site.racks_count %></td>
        <td class='ellipsis'><%= site.devices_count %></td>
        <td>
          <%= action_buttons(
                  display_link_if_authorized(
                      _("Edit"),
                      hash_for_edit_site_path(:id => site).merge(:auth_object => site, :authorizer => authorizer)
                  ),
                  display_delete_if_authorized(
                      hash_for_site_path(:id => site).merge(:auth_object => site, :authorizer => authorizer),
                      :data => { :confirm => 'Are you sure?'},
                      :action => :destroy
                  )
              ) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate_with_info @sites %>

