<%= form_for @device_bay_template, as: :device_bay_template, url: (@device_bay_template.new_record? ? device_type_device_bay_templates_path : device_type_device_bay_template_path(@device_bay_template)) do |f| %>
    <%= base_errors_for @device_bay_template %>

    <div class="clearfix">
      <div class="form-group">
        <label class="col-md-2 control-label required">Device Type</label>
        <div class="col-md-4">
          <input disabled class="form-control" value="<%= @device_bay_template.device_type.model %>">
        </div>
      </div>
    </div>

    <%= f.hidden_field :device_type_id %>
    <%= text_f f, :name, required: true %>

    <%= submit_or_cancel f, false, cancel_path: device_type_path(@device_bay_template.device_type) %>
<% end %>
